@model API.Sparta.Models.TbKhachHangDanhGia

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Đánh giá của khách hàng</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="KhachhangdanhgiaId" />
                            <div class="form-group">
                                <label asp-for="KhachhangdanhgiaTenkh" class="control-label">Tên khách hàng</label>
                                <br />
                                @Html.DisplayFor(model => model.KhachhangdanhgiaTenkh)
                            </div>
                            <div class="form-group">
                                <label asp-for="KhachhangdanhgiaNghenghiep" class="control-label">Nghề nghiệp</label>
                                <br />
                                @Html.DisplayFor(model => model.KhachhangdanhgiaNghenghiep)
                            </div>
                            <div class="form-group">
                                <label asp-for="KhachhangdanhgiaHinhanh" class=" form-control-label">Hình ảnh</label>
                                <br />
                                <img asp-for="SlideImage" src="@Html.DisplayFor(Model => Model.KhachhangdanhgiaHinhanh)" />
                            </div>
                            <div class="form-group">
                                <label asp-for="KhachhangdanhgiaNoidung" for="textarea-input" class=" form-control-label">Nội dung</label><br />
                                @Html.DisplayFor(model => model.KhachhangdanhgiaNoidung)
                            </div>
                            <div class="card-footer text-right">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="KhachhangdanhgiaId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

