@model API.Sparta.Models.TbLoaiCamNang

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý loại cẩm nang</strong>
                    </div>
                    <form asp-action="Edit" asp-antiforgery="true" enctype="multipart/form-data">
                        <div class="card-body card-block">
                            <div class="form-horizontal">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="LoaicamnangId" />
                                <div class="form-group">
                                    <label asp-for="LoaicamnangTieude" class="control-label">Tiêu đề</label>
                                    <input asp-for="LoaicamnangTieude" class="form-control" />
                                    <span asp-validation-for="LoaicamnangTieude" class="text-danger"></span>
                                </div>
                                <div class="card-footer text-right">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary" value="Save">
                                            <i class="fa fa-save"></i>Lưu
                                        </button>
                                        <button type="reset" class="btn btn-danger">
                                            <i class="fa fa-undo"></i>Hủy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
