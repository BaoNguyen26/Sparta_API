@model API.Sparta.Models.TbVideoHuongDan

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý Slide</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-horizontal">
                            @using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="VideohuongdanTieude" class="control-label">Tiêu đề</label>
                                        <input asp-for="VideohuongdanTieude" class="form-control" />
                                        <span asp-validation-for="VideohuongdanTieude" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="VideohuongdanHinhanh" class="control-label">Hình ảnh</label>
                                        <input type="file" asp-for="VideohuongdanHinhanh" class="form-control" />
                                        <span asp-validation-for="VideohuongdanHinhanh" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="VideohuongdanLinkvideo" class="control-label">Video</label>
                                        <input type="file" asp-for="VideohuongdanLinkvideo" class="form-control" />
                                        <span asp-validation-for="VideohuongdanLinkvideo" class="text-danger"></span>
                                    </div>
                                    <div class="card-footer text-right">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" value="Create">
                                                <i class="fa fa-save"></i>Lưu
                                            </button>
                                            <button type="reset" class="btn btn-danger">
                                                <i class="fa fa-undo"></i>Hủy
                                            </button>
                                        </div>
                                    </div>

                                </form>}
                            <form asp-action="Create" method="POST" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="VideohuongdanTieude" class="control-label">Tiêu đề</label>
                                    <input asp-for="VideohuongdanTieude" class="form-control" />
                                    <span asp-validation-for="VideohuongdanTieude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="VideohuongdanHinhanh" class="control-label">Hình ảnh</label>
                                    <input type="file" asp-for="VideohuongdanHinhanh" class="form-control" />
                                    <span asp-validation-for="VideohuongdanHinhanh" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="VideohuongdanLinkvideo" class="control-label">Video</label>
                                    <input type="file" asp-for="VideohuongdanLinkvideo" class="form-control" />
                                    <span asp-validation-for="VideohuongdanLinkvideo" class="text-danger"></span>
                                </div>
                                <div class="card-footer text-right">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary" value="Create">
                                            <i class="fa fa-save"></i>Lưu
                                        </button>
                                        <button type="reset" class="btn btn-danger">
                                            <i class="fa fa-undo"></i>Hủy
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
