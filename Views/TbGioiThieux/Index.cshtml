@model IEnumerable<API.Sparta.Models.TbGioiThieu>

@{
    ViewData["Title"] = "Index";
}


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <h4 class="box-title mr-3">Giới thiệu</h4>
                        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Thêm</a>
                        <div class="search-name ml-2">
                            <label for="inputPassword2" class="sr-only">Seach...</label>
                            <input type="text" class="form-control" placeholder="Tìm kiếm..." />
                            <button type="submit" class="btn btn-primary ml-2">
                                Tìm kiếm
                            </button>
                        </div>
                    </div>
                    <div class="card-body--">
                        <div class="table-stats order-table ov-h">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="avatar">Hình ảnh</th>
                                        <th>Tiêu đề</th>
                                        <th>Nội dung</th>
                                        <th>Link</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="tdl-holder">
                                                <label>
                                                    <input type="checkbox"><i class="check-box"></i>
                                                </label>
                                            </td>
                                            <td class="img-slider">
                                                <img src="@Html.DisplayFor(modelItem => item.GioithieuHinhanh)" alt="">
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.GioithieuTieude)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GioithieuLink)
                                            </td>
                                            <td>
                                                <a class="btn btn-hdong btn-edit" asp-action="Edit" asp-route-id="@item.GioithieuId">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                &nbsp;<a class="btn btn-hdong btn-delete" asp-action="Delete" asp-route-id="@item.GioithieuId">
                                                    <i class="fa fa-close"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

