@model API.Sparta.Models.TbLienHe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Thông tin liên hệ</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="LienheId" />
                            <div class="form-group">
                                <label asp-for="LienheCoso" class="control-label">Cơ sở</label>
                                <br />
                                @Html.DisplayFor(model => model.LienheCoso)
                            </div>
                            <div class="form-group">
                                <label asp-for="LienheTencose" class="control-label">Tên cơ sở</label><br />
                                @Html.DisplayFor(model => model.LienheTencose)
                            </div>
                            <div class="form-group">
                                <label asp-for="LienheDiachi" for="textarea-input" class=" form-control-label">Địa chỉ</label><br />
                                @Html.DisplayFor(model => model.LienheDiachi)
                            </div>
                            <div class="form-group">
                                <label asp-for="LienheDienthoai" for="textarea-input" class=" form-control-label">Số điện thoại</label><br />
                                @Html.DisplayFor(model => model.LienheDienthoai)
                            </div>
                            <div class="form-group">
                                <label asp-for="LienheEmail" for="textarea-input" class=" form-control-label">Email</label><br />
                                @Html.DisplayFor(model => model.LienheEmail)
                            </div>
                            <div class="card-footer text-right">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="LienheId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
