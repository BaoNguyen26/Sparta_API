@model API.Sparta.Models.TbLienHe

@{
    ViewData["Title"] = "Create";
}

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Thông tin liên hệ</strong>
                        </div>
                        <div class="card-body card-block">
                            <div class="form-horizontal">
                                <form asp-action="Create" method="POST" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="LienheCoso" class="control-label">Cơ sở</label>
                                        <input asp-for="LienheCoso" class="form-control" />
                                        <span asp-validation-for="LienheCoso" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LienheTencose" class="control-label">Tên cơ sở</label>
                                        <input asp-for="LienheTencose" class="form-control" />
                                        <span asp-validation-for="LienheTencose" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LienheDiachi" class="control-label">Địa chỉ</label>
                                        <input asp-for="LienheDiachi" class="form-control" />
                                        <span asp-validation-for="LienheDiachi" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LienheDienthoai" class="control-label">Số điện thoại</label>
                                        <input asp-for="LienheDienthoai" class="form-control" rows="7"></input>
                                        <span asp-validation-for="LienheDienthoai" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LienheEmail" class="control-label">Email</label>
                                        <input asp-for="LienheEmail" class="form-control" rows="7"></input>
                                        <span asp-validation-for="LienheEmail" class="text-danger"></span>
                                    </div>
                                    <div class="card-footer text-right">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" value="Create">
                                                <i class="fa fa-save"></i>Lưu
                                            </button>
                                            <button type="reset" class="btn btn-danger">
                                                <i class="fa fa-undo"></i>Hủy
                                            </button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
