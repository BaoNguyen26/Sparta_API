                                    <tr>
                                        <td class="tdl-holder">
                                            <label>
                                                <input type="checkbox"><i class="check-box"></i>
                                            </label>
                                        </td>
                                        <td class="img-slider">
                                            <img src="@i.CamnangHinhanh" alt="">
                                        </td>

                                        <td>
                                            @i.CamnangTieude
                                        </td>
                                        <td>
                                            @i.LoaicamnangTieude
                                        </td>
                                        <td>
                                            <a class="btn btn-hdong btn-edit" asp-action="Edit" asp-route-id="@i.CamnangId">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            &nbsp;<a class="btn btn-hdong btn-delete" asp-action="Delete" asp-route-id="@i.CamnangId">
                                                <i class="fa fa-close"></i>
                                            </a>
                                        </td>
                                    </tr>
