@model API.Sparta.Models.TbSlide

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý Slide</strong>
                    </div>
                    <form asp-action="Edit" asp-antiforgery="true" enctype="multipart/form-data">
                        <div class="card-body card-block">
                            <div class="form-horizontal">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="SlideId" />
                                <div class="form-group">
                                    <label asp-for="SlideTieude" class="control-label">Tiêu đề</label>
                                    <input asp-for="SlideTieude" class="form-control" />
                                    <span asp-validation-for="SlideTieude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SlideImage" class=" form-control-label">Hình ảnh</label>
                                    <br />
                                    <input asp-for="SlideImage" class="form-control" style="display:none" />
                                    <img asp-for="SlideImage" src="@Html.DisplayFor(Model => Model.SlideImage)" />
                                    <input type="file" asp-for="SlideImage" class="form-control" src="@Html.DisplayFor(Model => Model.SlideImage)" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="SlideLink" class="control-label">Link</label>
                                    <input asp-for="SlideLink" class="form-control" />
                                    <span asp-validation-for="SlideLink" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SlideMota" for="textarea-input" class=" form-control-label">Nội dung</label>
                                    <textarea asp-for="SlideMota" class="form-control" rows="9"></textarea>
                                    @*<textarea asp-for="CamnangNoidung" name="textarea-input" id="textarea-input" rows="9" placeholder="Editor Content..." class="form-control"></textarea>*@
                                    <span asp-validation-for="SlideMota" class="text-danger"></span>
                                    @*<div class="form-group btn btn-primary">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>*@
                                </div>
                                <div class="card-footer text-right">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary" value="Save">
                                            <i class="fa fa-save"></i>Lưu
                                        </button>
                                        <button type="reset" class="btn btn-danger">
                                            <i class="fa fa-undo"></i>Hủy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
