@model API.Sparta.Models.TbSlide

@{
    ViewData["Title"] = "Create";
}

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý Slide</strong>
                        </div>
                        <div class="card-body card-block">
                            <div class="form-horizontal">
                                <form asp-action="Create" method="POST" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="SlideTieude" class="control-label">Tiêu đề</label>
                                        <input asp-for="SlideTieude" class="form-control" />
                                        <span asp-validation-for="SlideTieude" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SlideMota" class="control-label">Nội dung</label>
                                        <textarea asp-for="SlideMota" class="form-control" ></textarea>
                                        <span asp-validation-for="SlideMota" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SlideLink" class="control-label">Link</label>
                                        <input asp-for="SlideLink" class="form-control" />
                                        <span asp-validation-for="SlideLink" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SlideImage" class="control-label">Hình ảnh</label>
                                        <input type="file" asp-for="SlideImage" class="form-control" rows="7"/>
                                        <span asp-validation-for="SlideImage" class="text-danger"></span>
                                    </div>
                                    <div class="card-footer text-right">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" value="Create">
                                                <i class="fa fa-save"></i>Lưu
                                            </button>
                                            <button type="reset" class="btn btn-danger">
                                                <i class="fa fa-undo"></i>Hủy
                                            </button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
