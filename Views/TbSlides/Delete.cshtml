@model API.Sparta.Models.TbSlide

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý Slide</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="SlideId" />
                            <div class="form-group">
                                <label asp-for="SlideTieude" class="control-label">Tiêu đề</label>
                                <br/>
                                @Html.DisplayFor(model => model.SlideTieude)
                            </div>
                            <div class="form-group">
                                <label asp-for="SlideImage" class=" form-control-label">Hình ảnh</label>
                                <br />
                                <img asp-for="SlideImage" src="@Html.DisplayFor(Model => Model.SlideImage)" />
                            </div>
                            <div class="form-group">
                                <label asp-for="SlideLink" class="control-label">Link</label><br />
                                @Html.DisplayFor(model => model.SlideLink)
                            </div>
                            <div class="form-group">
                                <label asp-for="SlideMota" for="textarea-input" class=" form-control-label">Nội dung</label><br />
                                @Html.DisplayFor(model => model.SlideMota)
                            </div>
                            <div class="card-footer text-right">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="SlideId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

