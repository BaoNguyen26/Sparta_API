@model API.Sparta.Models.TbSuKien

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i></a><strong>Quản lý sự kiện</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-horizontal">
                            <form asp-action="Create" method="POST" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="SukienDiachi" class="control-label">Địa điểm</label>
                                    <input asp-for="SukienDiachi" class="form-control" />
                                    <span asp-validation-for="SukienDiachi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SukienNgaygio" class="control-label">Thời gian</label>
                                    <input type="date" asp-for="SukienNgaygio" class="form-control" />
                                    <span asp-validation-for="SukienNgaygio" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SukienMota" class="control-label">Mô tả</label>
                                    <textarea asp-for="SukienMota" class="form-control" ></textarea>
                                    <span asp-validation-for="SukienMota" class="text-danger"></span>
                                </div>
                                <div class="card-footer text-right">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary" value="Create">
                                            <i class="fa fa-save"></i>Lưu
                                        </button>
                                        <button type="reset" class="btn btn-danger">
                                            <i class="fa fa-undo"></i>Hủy
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
